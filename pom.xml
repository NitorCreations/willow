          <version>1.8</version>
        </plugin>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>build-helper-maven-plugin</artifactId>
          <version>1.9.1</version>
        </plugin>
        <plugin>
          <groupId>org.jacoco</groupId>
          <artifactId>jacoco-maven-plugin</artifactId>
          <version>${jacoco.version}</version>
          <executions>
            <execution>
              <id>default-prepare-agent</id>
              <goals>
                <goal>prepare-agent</goal>
                <goal>report</goal>
              </goals>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <groupId>org.eluder.coveralls</groupId>
          <artifactId>coveralls-maven-plugin</artifactId>
          <version>3.1.0</version>
          <configuration>
            <repoToken>${env.COVERALLS_TOKEN}</repoToken>
            <sagaReports>
              <sagaReport>willow-servers/target/saga-coverage/total-coverage.xml</sagaReport>
            </sagaReports>
            <sourceDirectories>
              <sourceDirectory>.</sourceDirectory>
              <sourceDirectory>willow-servers</sourceDirectory>
              <sourceDirectory>willow-servers/src/main/resources/webapp/scripts</sourceDirectory>
              <sourceDirectory>willow-servers/src/main/resources/webapp/scripts/modules</sourceDirectory>
              <sourceDirectory>willow-servers/src/main/resources/webapp/scripts/modules/graphs</sourceDirectory>
              <sourceDirectory>willow-servers/src/main/resources/webapp/scripts/services</sourceDirectory>
              <sourceDirectory>willow-servers/src/main/resources/webapp/scripts/behaviors</sourceDirectory>
              <sourceDirectory>willow-maven-plugin/target/generated-sources/plugin</sourceDirectory>
            </sourceDirectories>
          </configuration>
        </plugin>
        <plugin>
          <groupId>com.coverity</groupId>
          <artifactId>ondemand-maven-plugin</artifactId>
          <version>1.3.637</version>
        </plugin>
        <plugin>
          <groupId>com.github.searls</groupId>
          <artifactId>jasmine-maven-plugin</artifactId>
          <version>2.0-beta-02</version>
        </plugin>
        <plugin>
          <groupId>com.github.timurstrekalov</groupId>
          <artifactId>saga-maven-plugin</artifactId>
          <version>1.5.4</version>
        </plugin>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>sonar-maven-plugin</artifactId>
          <version>2.6</version>
        </plugin>
      </plugins>
    </pluginManagement>
